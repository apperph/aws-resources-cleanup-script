{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"ec2:Describe*",
				"ec2:StopInstances",
				"ec2:TerminateInstances",
				"ec2:ReleaseAddress",
				"ec2:DeleteNatGateway"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": "elasticloadbalancing:Describe*",
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"cloudwatch:ListMetrics",
				"cloudwatch:GetMetricStatistics",
				"cloudwatch:Describe*"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"autoscaling:Describe*",
				"autoscaling:UpdateAutoScalingGroup",
				"autoscaling:DeleteAutoScalingGroup"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"ecs:Describe*",
                "ecs:List*",
				"ecs:Delete*",
				"ecs:Update*",
				"ecr:DescribeRepositories",
				"ecr:DeleteRepository"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"kms:Describe*",
                "kms:List*",
				"kms:Delete*",
				"kms:Update*",
				"kms:ScheduleKeyDeletion",
				"kms:Get*",
				"kms:Put*"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"elasticache:DescribeCacheClusters",
                "elasticache:DeleteCacheCluster"
			],
			"Resource": "*"
		},
		{
			"Sid": "AllowRDSDelete",
			"Effect": "Allow",
			"Action": [
				"rds:Describe*",
				"rds:DeleteDBInstance",
				"rds:DeleteDBCluster"
			],
			"Resource": "*"
		}
	]
}